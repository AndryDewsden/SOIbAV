<Page x:Class="SOI.Pages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Добавление/Редактирование Оборудования" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBox x:Name="nameEquipment" Margin="0,0,0,10" Width="300" Height="30"/>
            <TextBox x:Name="quantityBox" Margin="0,0,0,10" PreviewTextInput="quantityBox_PreviewTextInput" Width="300" Height="30"/>
            <TextBox x:Name="priceBox" Margin="0,0,0,10" PreviewTextInput="priceBox_PreviewTextInput" Width="300" Height="30"/>

            <ComboBox x:Name="specificationCombo" Margin="0,0,0,10" Width="300" Height="30">
                <ComboBoxItem Content="-выбрать-"/>
            </ComboBox>
            <ComboBox x:Name="supplierCombo" Margin="0,0,0,10" Width="300" Height="30">
                <ComboBoxItem Content="-выбрать-"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" >
                <Button Content="Сохранить" Click="Save_Click" Margin="0,0,10,0" Width="300" Height="30"/>
                <Button Content="Назад" Click="GoBack_Click" Width="300" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
