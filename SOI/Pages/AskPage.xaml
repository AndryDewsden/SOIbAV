<Page x:Class="SOI.Pages.AskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="Создание запроса">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Создание заявки на оборудование" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Имя пользователя:"/>
            <TextBox x:Name="UserNameTextBox" Width="300" Margin="0,0,0,10"/>

            <Label Content="Название оборудования:"/>
            <TextBox x:Name="EquipmentNameTextBox" Width="300" Margin="0,0,0,10"/>

            <Label Content="Описание заявки:"/>
            <TextBox x:Name="DescriptionTextBox" Width="300" Height="100" Margin="0,0,0,10" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Button Content="Отправить заявку" Width="150" Margin="0,10,0,0" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
