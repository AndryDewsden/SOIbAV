<Page x:Class="SOI.Pages.ItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="Список оборудования">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="450"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox x:Name="Searcher" Width="200" Height="30" Margin="5,0" TextChanged="Searcher_TextChanged" />
                <ComboBox x:Name="Filter" Width="120" Height="30" Margin="5,0" SelectionChanged="Filter_SelectionChanged"/>
                <ComboBox x:Name="Sorter" Width="120" Height="30" Margin="5,0" SelectionChanged="Sorter_SelectionChanged"/>
                <Label x:Name="Counter" Margin="5,0" Width="300" Height="30" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <ListView x:Name="listEquipment" ScrollViewer.CanContentScroll="False">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImagePath}" Width="100" Height="100"/>
                            <TextBlock Text="{Binding Name}" Margin="10,0"/>
                            <TextBlock Text="{Binding Type}" Margin="10,0"/>
                            <TextBlock Text="{Binding Status}" Margin="10,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
